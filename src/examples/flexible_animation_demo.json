{
  "title": "Flexible Animation Demo",
  "author": "pypptx-engine",
  "subject": "Demonstrating flexible animation system capabilities",
  "slides": [
    {
      "title": "Motion Animations Demo",
      "layout": "content",
      "background": {
        "type": "gradient",
        "colors": ["#667eea", "#764ba2"],
        "direction": "diagonal"
      },
      "elements": [
        {
          "type": "text",
          "content": "Motion Animation Examples",
          "position": {"x": 1, "y": 0.5, "width": 8, "height": 1},
          "font": {"size": 32, "bold": true, "color": "#ffffff"},
          "alignment": "center"
        },
        {
          "type": "rectangle",
          "position": {"x": 1, "y": 2, "width": 1.5, "height": 1},
          "fill": {"color": "#e74c3c"},
          "animation": {
            "type": "motion_right",
            "duration": 2.0,
            "delay": 0.5,
            "trigger": "on_click",
            "custom": {
              "distance": 3.0,
              "easing": "ease_in_out"
            }
          }
        },
        {
          "type": "circle",
          "position": {"x": 6, "y": 2, "width": 1.5, "height": 1},
          "fill": {"color": "#3498db"},
          "animation": {
            "type": "motion_up",
            "duration": 1.5,
            "delay": 1.0,
            "trigger": "after_previous",
            "custom": {
              "distance": 2.0,
              "repeat": 2,
              "reverse": true
            }
          }
        },
        {
          "type": "rectangle",
          "position": {"x": 3.5, "y": 4, "width": 1.5, "height": 1},
          "fill": {"color": "#f39c12"},
          "animation": {
            "type": "motion_diagonal",
            "duration": 2.5,
            "delay": 0.5,
            "trigger": "on_click",
            "custom": {
              "direction": "up_right",
              "distance": 2.0
            }
          }
        }
      ]
    },
    {
      "title": "Entrance Effects Demo",
      "layout": "content",
      "background": {
        "type": "solid",
        "color": "#2c3e50"
      },
      "elements": [
        {
          "type": "text",
          "content": "Entrance Animation Examples",
          "position": {"x": 1, "y": 0.5, "width": 8, "height": 1},
          "font": {"size": 32, "bold": true, "color": "#ecf0f1"},
          "alignment": "center"
        },
        {
          "type": "text",
          "content": "Fade In Effect",
          "position": {"x": 1, "y": 2, "width": 3, "height": 1},
          "font": {"size": 18, "bold": true, "color": "#ffffff"},
          "fill": {"color": "#e74c3c"},
          "alignment": "center",
          "animation": {
            "type": "entrance_fade_in",
            "duration": 1.5,
            "delay": 0.5,
            "trigger": "on_click"
          }
        },
        {
          "type": "text",
          "content": "Fly In from Left",
          "position": {"x": 5, "y": 2, "width": 3, "height": 1},
          "font": {"size": 18, "bold": true, "color": "#ffffff"},
          "fill": {"color": "#3498db"},
          "alignment": "center",
          "animation": {
            "type": "entrance_fly_in_from_left",
            "duration": 1.2,
            "delay": 1.0,
            "trigger": "after_previous"
          }
        },
        {
          "type": "text",
          "content": "Zoom In Effect",
          "position": {"x": 1, "y": 4, "width": 3, "height": 1},
          "font": {"size": 18, "bold": true, "color": "#ffffff"},
          "fill": {"color": "#f39c12"},
          "alignment": "center",
          "animation": {
            "type": "entrance_zoom_in",
            "duration": 1.0,
            "delay": 0.8,
            "trigger": "after_previous"
          }
        },
        {
          "type": "text",
          "content": "Bounce In Effect",
          "position": {"x": 5, "y": 4, "width": 3, "height": 1},
          "font": {"size": 18, "bold": true, "color": "#ffffff"},
          "fill": {"color": "#9b59b6"},
          "alignment": "center",
          "animation": {
            "type": "entrance_bounce_in",
            "duration": 1.5,
            "delay": 1.2,
            "trigger": "after_previous",
            "custom": {
              "easing": "bounce"
            }
          }
        }
      ]
    }
  ]
}
