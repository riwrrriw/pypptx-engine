{
  "presentation": {
    "properties": {
      "title": "Modern Design Presentation",
      "author": "PPTX Engine",
      "template": "modern",
      "theme": "green"
    },
    "size": { "width_in": 16, "height_in": 9 },
    "slides": [
      {
        "layout": 6,
        "transition": {
          "type": "zoom",
          "duration": "fast"
        },
        "shapes": [
          {
            "type": "text",
            "text": "Innovation & Growth",
            "animation": {
              "type": "zoom",
              "duration": "medium",
              "trigger": "on_click"
            }
          },
          {
            "type": "text",
            "text": [
              "Modern approach to business",
              "Cutting-edge solutions",
              "Future-ready strategies"
            ],
            "animation": {
              "type": "fade_in",
              "duration": "fast",
              "trigger": "after_previous",
              "delay": 0.4
            }
          }
        ]
      },
      {
        "layout": 6,
        "transition": {
          "type": "cube",
          "duration": "slow"
        },
        "shapes": [
          {
            "type": "text",
            "text": "Key Metrics",
            "animation": {
              "type": "swivel",
              "duration": "medium",
              "trigger": "on_click"
            }
          },
          {
            "type": "flowchart",
            "elements": [
              {
                "id": "start",
                "shape": "start",
                "text": "Process Start",
                "x": 2,
                "y": 3,
                "w": 2.5,
                "h": 1
              },
              {
                "id": "step1",
                "shape": "process",
                "text": "Analysis",
                "x": 6,
                "y": 3,
                "w": 2.5,
                "h": 1
              },
              {
                "id": "end",
                "shape": "end",
                "text": "Results",
                "x": 10,
                "y": 3,
                "w": 2.5,
                "h": 1
              }
            ],
            "connections": [
              {
                "from": "start",
                "to": "step1",
                "from_side": "right",
                "to_side": "left"
              },
              {
                "from": "step1",
                "to": "end",
                "from_side": "right",
                "to_side": "left"
              }
            ],
            "animation": {
              "type": "fly_in",
              "duration": "slow",
              "trigger": "after_previous",
              "delay": 0.6
            }
          }
        ]
      }
    ]
