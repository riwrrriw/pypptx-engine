# AI/RAG System Environment Configuration
# Copy this file to .env and fill in your AI Foundry configuration

# =============================================================================
# AI FOUNDRY CONFIGURATION
# =============================================================================

# Azure OpenAI API Key
AI_FOUNDRY_API_KEY=your-azure-openai-api-key-here

# Azure OpenAI Endpoint
AI_FOUNDRY_BASE_URL=https://ai-peerawatr-6647.cognitiveservices.azure.com/

# Azure OpenAI API Version
AI_FOUNDRY_API_VERSION=2024-12-01-preview

# Azure OpenAI Deployment Name
AI_MODEL_DEPLOYMENT=gpt-5-for-pptx

# Model Name
AI_MODEL=gpt-5

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Default resource directory (relative to ai/ folder)
DEFAULT_RESOURCE_DIR=./resource

# Default output directory (relative to ai/ folder)
DEFAULT_OUTPUT_DIR=./result

# Enable debug logging (true/false)
DEBUG_MODE=false

# Maximum content length for AI processing
MAX_CONTENT_LENGTH=4000

# =============================================================================
# PRESENTATION DEFAULTS
# =============================================================================

# Default presentation theme (professional, modern, creative)
DEFAULT_THEME=professional

# Default color scheme (professional, modern, creative)
DEFAULT_COLOR_SCHEME=professional

# Enable AI enhancement features (true/false)
ENABLE_AI_ENHANCEMENT=true

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

UNSPLASH_APPLICATION_KEY=
UNSPLASH_ACCESS_KEY=
UNSPLASH_ACCESS_SECRET_KEY=
PEXELS_API_KEY=

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Fill in your AI Foundry API key and configuration
# 3. Choose your preferred AI model (available through AI Foundry)
# 4. Run: poetry install --extras ai
# 5. Test: poetry run pypptx-ai --help
#
# For basic usage without AI enhancement:
# - Leave AI_FOUNDRY_API_KEY empty
# - Set ENABLE_AI_ENHANCEMENT=false
#
# For full AI features:
# - Add your AI Foundry API key
# - Set your preferred model available in AI Foundry
# - Set ENABLE_AI_ENHANCEMENT=true
